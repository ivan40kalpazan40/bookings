<section id='viewAddhotel'>
  <h2>Add new hotel</h2>
  <form id='formAddhotel' method='POST'>
    <label for='name'>Hotel name:</label>
    <input type='text' id='name' name='name' placeholder='Hotel name' />
    <label for='city'>City:</label>
    <input type='text' id='city' name='city' placeholder='City' />
    <label for='free-rooms'>Free rooms:</label>
    <input
      type='number'
      id='free-rooms'
      name='freeRooms'
      placeholder='Free rooms'
    />
    <label for='image'>Image:</label>
    <input type='text' id='image' name='image' placeholder='https://' />

    <input type='submit' class='create' value='Add' />
  </form>
</section>