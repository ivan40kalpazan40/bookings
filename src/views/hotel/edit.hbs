<section id='viewAddhotel'>
  <h2>Edit existing hotel</h2>
  <form id='formAddhotel' method='POST'>
    <label for='name'>Hotel name:</label>
    <input type='text' id='name' name='name' value='{{hotel.name}}' />
    <label for='city'>City:</label>
    <input type='text' id='city' name='city' value='{{hotel.city}}' />
    <label for='free-rooms'>Free rooms:</label>
    <input
      type='number'
      id='free-rooms'
      name='freeRooms'
      value='{{hotel.freeRooms}}'
    />
    <label for='image'>Image:</label>
    <input type='text' id='image' name='image' value='{{hotel.image}}' />

    <input type='submit' class='create' value='Add' />
  </form>
</section>